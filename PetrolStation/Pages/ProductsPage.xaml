<Page x:Class="PetrolStation.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetrolStation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsPage">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="222" Height="111">
        <ListView ItemsSource="{Binding finallLIst}" CommandManager.Executed="{Binding}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding name}" Header="Paliwa" ></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding price}" Header="cena" ></GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
        </StackPanel>


        <Button Width="222" Height="22" Command="{Binding AddNewProductCommand}"/>
    </Grid>
</Page>
